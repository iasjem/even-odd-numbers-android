<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadingTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000</item>
        <item name="android:borderlessButtonStyle">true</item>
    </style>

</resources>
